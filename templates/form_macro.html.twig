{% macro preparationIngredient_form_prototype(form, elem) %}
    <div class="row collection_item">
        <div class="col-4">{{ form_widget(form.ingredient) }}</div>
        <div class="col-2">{{ form_widget(form.weight) }}</div>
        <div class="col-2">{{ form_widget(form.volume) }}</div>
        <div class="col-2">{{ form_widget(form.quantity) }}</div>
        <div class="col-1"><span class="delete_collection_item"><i class="fa-solid fa-trash"></i></span></div>
    </div>
{% endmacro %}

