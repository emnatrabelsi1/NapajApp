{% extends 'base.html.twig' %}

{% block title %}Produits{% endblock %}
{% set active_link = 'product_index' %}

{% block body %}
    {{ encore_entry_script_tags('product-list') }}
    <a class="pull-right" href="{{ path('app_product_new') }}"><button class="btn btn-primary add_button" type="button">Ajouter</button></a>
    <h1>Produits</h1>
    {% if app.user.company.isNapaj is same as true %}
        <div class="row tag_filter_row">
            <div class="col-md-12">
                Filtrer par tag : 
                {% for tag in tags %}
                    <span data-tag-id="{{ tag.id }}" class="tag_filter button_filter">{{ tag.name }}</span>
                {% endfor %}<br/>
                <span class="out_of_stock_filter">En rupture</span>

            </div>
        </div>
    {% endif %}

    <div class="row">
        <table id="product-datatable" class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Img</th>
                    <th>Nom</th>
                    <th>Tags</th>
                    <th>Recette</th>
                    <th>Prix/part</th>
                    <th>Stock</th>
                    <th>Etiquettes</th>
                </tr>
            </thead>
            <tbody>
            {% if products is empty %}
                <tr>
                    <td>Aucune donn√©e disponible</td>
                </tr>
            {% endif %}
            </tbody>
        </table>
    </div>
{% endblock %}
