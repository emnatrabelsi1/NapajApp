{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
    <h1>Product</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Nom</th>
                <td>{{ product.name }}</td>
            </tr>
            <tr>
                <th>Prix/pièce</th>
                <td>{{ product.piecePrice }}</td>
            </tr>
            <tr>
                <th>Nb pièces</th>
                <td>{{ product.pieceQuantity }}</td>
            </tr>
        </tbody>
    </table>
    <a href="{{ path('app_product_index') }}"><i class="fa-solid fa-arrow-left"></i> Retour à la liste</a>

    <a href="{{ path('app_product_edit', {'id': product.id}) }}">edit</a>

    {{ include('product/_delete_form.html.twig') }}
{% endblock %}
