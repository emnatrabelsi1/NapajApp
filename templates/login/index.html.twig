{% extends 'base.html.twig' %}

{% block title %}Modifier une pr√©paration{% endblock %}

{% block body %}

    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <div class="loginArea">
        <img width="250" src="{{ asset('build/img/logo_texte_noir.png') }}">
        <br/>
        <br/>        
        <form action="{{ path('app_login') }}" method="post">
            <div class="row">
                <div class="col-md-12">
                    <label for="username">Identifiant/email :</label>
                    <input type="text" id="username" name="_username" value="{{ last_username }}">
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <label for="password">Mot de passe :</label>
                    <input type="password" id="password" name="_password">
                </div>
            </div>
            
            {# If you want to control the URL the user is redirected to on success
            <input type="hidden" name="_target_path" value="/account"> #}
            <br/>
            <div class="row">
                <div class="col-md-12"><button class="btn-primary" type="submit">Se connecter</button></div>
            </div>
            <br/>
            <br/>

        </form>
    </div>
{% endblock %}